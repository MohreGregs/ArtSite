<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ArtSiteDashboard.Views.NoCharactersView">
    <Grid VerticalAlignment="Center" 
          HorizontalAlignment="Center"
          RowDefinitions="*,*">
        <TextBlock Text="No Characters to display." Grid.Row="0"></TextBlock>
        <Button Click="Button_OnClick" HorizontalAlignment="Center" Grid.Row="1"><TextBlock Text="Add first one!"/></Button>
    </Grid>
</UserControl>
